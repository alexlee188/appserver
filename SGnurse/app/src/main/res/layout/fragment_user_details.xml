<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentLeft="true"
        android:text="Name:"
        android:id="@+id/textView"
        android:gravity = "center_vertical"
        android:layout_gravity="left|center_horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_gravity="left|center_horizontal"
        android:layout_toRightOf="@+id/textView"
        android:id="@+id/userName" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity = "center_vertical"
        android:text="Email:"
        android:layout_below="@id/textView"
        android:layout_alignParentLeft="true"
        android:id="@+id/textView2"
        android:layout_gravity="left|center_horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_gravity="left|center_horizontal"
        android:layout_below="@id/textView"
        android:layout_toRightOf="@+id/textView2"
        android:id="@+id/userEmail" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Phone:"
        android:layout_below="@id/textView2"
        android:layout_alignParentLeft="true"
        android:gravity = "center_vertical"
        android:id="@+id/textView3"
        android:layout_gravity="left|center_horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_gravity="left|center_horizontal"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@+id/textView3"
        android:id="@+id/userPhone" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/textView3"
        android:layout_alignParentLeft="true"
        android:gravity = "center_vertical"
        android:text="NRIC:"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_gravity="left|center_horizontal"
        android:layout_below="@id/textView3"
        android:layout_toRightOf="@+id/textView4"
        android:id="@+id/NRIC" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/textView4"
        android:layout_alignParentLeft="true"
        android:text="Gender:"
        android:id="@+id/textView6" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_toRightOf="@+id/textView6"
        android:orientation="horizontal"
        android:id="@+id/gender_group">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Male"
            android:id="@+id/male_btn" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Female"
            android:id="@+id/female_btn"
            android:layout_gravity="center_horizontal" />
    </RadioGroup>

    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/textView6"
        android:layout_alignParentLeft="true"
        android:text="@string/nurse_type"
        android:id="@+id/textView7" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/textView6"
        android:layout_toRightOf="@+id/textView7"
        android:orientation="horizontal"
        android:id="@+id/nurse_type_group">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="RN"
            android:id="@+id/RN_btn" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="EN"
            android:id="@+id/EN_btn" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/none"
            android:id="@+id/NN_btn" />

    </RadioGroup>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:gravity = "center_vertical"
        android:text="@string/have_insurance"
        android:id="@+id/insurance_checkBox" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:layout_below="@+id/insurance_checkBox"
        android:layout_alignParentRight="true"
        android:id="@+id/userUpdate" />

</RelativeLayout>